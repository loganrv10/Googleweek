<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".thirdscreen">


    <TextView
        android:id="@+id/tvlast1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/tvlast2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="23sp"/>


    <TextView
        android:id="@+id/tvlast3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="23sp"/>


    <TextView
        android:id="@+id/tvlast4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="23sp"/>



    <TextView
        android:id="@+id/mTVNoOfSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/mTVDateOfShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="23sp"/>


    <Button
        android:id="@+id/BtnConfirmDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm_details"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"/>

</LinearLayout>