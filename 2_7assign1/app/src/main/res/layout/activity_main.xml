<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/View1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#313236"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tvArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/View1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        app:drawableStartCompat="@drawable/ic_baseline_arrow_back_24"
        android:drawableStart="@drawable/ic_baseline_arrow_back_24"
        app:drawableLeftCompat="@drawable/ic_baseline_arrow_back_24"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/tvSmoking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smoking"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/View1"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_home_24"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/View1"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/cigImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/cig"
        app:layout_constraintTop_toBottomOf="@+id/View1"
        app:layout_constraintStart_toEndOf="parent"/>

    <TextView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintStart_toBottomOf="@+id/cigImg"
        app:layout_constraintTop_toBottomOf="@id/cigImg"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        app:drawableStartCompat="@drawable/ic_line_1line"
        app:drawableLeftCompat="@drawable/ic_line_1line"
        android:paddingStart="20dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/punjab"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/cigImg"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="23dp"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_punjab_1st_in_india_to_ban_cigarette"
        app:drawableLeftCompat="@drawable/ic_punjab_1st_in_india_to_ban_cigarette"
        android:layout_marginStart="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        app:drawableLeftCompat="@drawable/para"
        app:drawableStartCompat="@drawable/para" />
</androidx.constraintlayout.widget.ConstraintLayout>