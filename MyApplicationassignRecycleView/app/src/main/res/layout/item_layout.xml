<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20sp"
    app:cardCornerRadius="20sp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rlCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAnimalHeading"
            android:layout_marginTop="10dp"
            android:text="animals"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivAnimalImage"
            android:layout_below="@+id/tvAnimalHeading"
            android:layout_width="124dp"
            android:layout_height="120dp"
            android:layout_margin="20dp"
            android:src="@drawable/cat"
            android:contentDescription="TODO" />


        <TextView
            android:id="@+id/tvAnimalName"
            android:layout_width="wrap_content"
            android:text="cat"
            android:layout_below="@+id/ivAnimalImage"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" />

        <TextView
            android:id="@+id/tvAnimalSound"
            android:layout_width="wrap_content"
            android:text="@string/meows"
            android:layout_below="@+id/tvAnimalName"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>