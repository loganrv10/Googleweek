<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#551947"
        android:layout_height="500dp"
        >

        <TextView
            android:id="@+id/TvBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/TvFly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Fly to Seoul"
            android:layout_toEndOf="@+id/TvBackArrow"
            android:layout_toRightOf="@+id/TvBackArrow"
            android:textSize="25dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"

            />

      <EditText
         android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_marginTop="70dp"
          android:text="      1 Adult, Economy"
          android:layout_below="@+id/TvFly"
          android:textColor="@color/white"
          android:layout_marginLeft="40dp"
          android:layout_marginRight="40dp"
          android:drawableStart="@drawable/ic_baseline_person_24"
          android:drawableLeft="@drawable/ic_baseline_person_24" />














    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>