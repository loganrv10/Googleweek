<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#079527"
        android:drawableStart="@drawable/ic_arrow"
        android:drawableEnd="@drawable/ic_search"
        android:padding="20dp"
        tools:ignore="RtlCompat" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#079527">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_playbutton"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/ivRectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/rectangle" />

        <ImageView
            android:id="@+id/Rectangle_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ivRectangle"
            android:layout_marginTop="20dp"


            android:layout_marginEnd="-166dp"
            android:layout_marginRight="-167dp"
            android:src="@drawable/rectangle_2" />

        <ImageView
            android:id="@+id/Rectangle_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ivRectangle"
            android:layout_marginTop="50dp"


            android:layout_marginEnd="-166dp"
            android:layout_marginRight="-167dp"
            android:src="@drawable/rectangle_4" />

        <ImageView
            android:id="@+id/Rectangle_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ivRectangle"
            android:layout_marginTop="80dp"


            android:layout_marginEnd="-166dp"
            android:layout_marginRight="-167dp"
            android:src="@drawable/rectangle_5" />

             




    </RelativeLayout>


</LinearLayout>