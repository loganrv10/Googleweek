<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#551947"
        android:gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_vectorarrow">

    </TextView>

    <TextView
        android:id="@+id/tvfirst"
        android:layout_width="match_parent"
        android:background="#551947"
          android:layout_marginStart="28dp"
        android:paddingLeft="23dp"
        android:gravity="center_vertical"
        android:text="@string/fly_to_seoul"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:textSize="25sp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp">

    </TextView>

        <TextView
            android:layout_below="@+id/tvfirst"
            android:layout_width="match_parent"
            android:background="#551947"
            android:layout_height="400dp"
            >

        </TextView>

   <EditText
       android:id="@+id/tvadult"
       android:layout_width="match_parent"
       android:drawableStart="@drawable/filledadult"
       android:layout_below="@id/tvfirst"
       android:text="     1 Adult, Economy"
       android:textSize="22dp"
       android:textColor="@color/white"
       android:layout_marginLeft="25dp"
       android:paddingTop="20dp"
       android:layout_height="wrap_content">

   </EditText>



        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/vectorlocation"
            android:layout_below="@id/tvadult"
            android:text="        Seoul, Korea"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:paddingTop="20dp"
            android:layout_height="wrap_content">

        </TextView>



    </RelativeLayout>

</LinearLayout>